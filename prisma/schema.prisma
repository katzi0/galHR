// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  EMPLOYEE
  VOLUNTEER
}

enum EntryType {
  WORK_HOURS
  EXPENSE
  VACATION
  TRAVEL
}

enum EntryStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  password    String
  name        String
  role        Role     @default(EMPLOYEE)
  phoneNumber String?
  department  String?
  avatarUrl   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  entries     Entry[]
  
  @@map("users")
}

model Entry {
  id          String      @id @default(cuid())
  userId      String
  type        EntryType
  status      EntryStatus @default(PENDING)
  
  // Work Hours fields
  date        DateTime?
  hoursWorked Float?
  
  // Expense fields
  expenseAmount   Float?
  expenseCategory String?
  receiptUrl      String?
  
  // Vacation fields
  startDate    DateTime?
  endDate      DateTime?
  vacationDays Int?
  
  // Travel fields
  travelDate DateTime?
  travelFrom String?
  travelTo   String?
  travelKm   Float?
  
  // Common fields
  description String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([type])
  @@index([status])
  @@index([date])
  @@index([createdAt])
  @@map("entries")
}
